{
    "name": "electron-react-app",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && electron .\"",
        "dev:react": "cd renderer && npm run dev",
        "build": "cd renderer && npm run build && electron-builder",
        "install:renderer": "cd renderer && npm install"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0",
        "concurrently": "^8.0.0",
        "wait-on": "^7.0.0"
    }
}
